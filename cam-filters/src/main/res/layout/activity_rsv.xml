<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ShaderProjects.shadercam.CameraActivity">

    <!--<com.androidexperiments.shadercam.view.SquareTextureView-->
    <com.uncorkedstudios.android.view.recordablesurfaceview.RecordableSurfaceView
        android:id="@+id/surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"/>

    <ImageButton
        android:id="@+id/btn_picture"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/round_button"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="50dp"
        android:src="@drawable/camera_icon"
        android:tint="#888888"
        android:padding="1dp"
        android:scaleType="fitCenter"/>

    <ImageButton
        android:id="@+id/btn_record"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/round_button"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:src="@drawable/video_camera_icon"
        android:padding="1dp"
        android:scaleType="fitCenter"
        android:tint="#888888"
        android:visibility="invisible"
        />

    <ImageButton
        android:id="@+id/btn_picture_activate"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round_button"

        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="50dp"
        android:src="@drawable/camera_icon"
        android:padding="1dp"
        android:scaleType="fitCenter"
        android:tint="#888888"
        android:visibility="invisible"
        />

    <ImageButton
        android:id="@+id/btn_record_activate"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round_button"

        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="50dp"
        android:src="@drawable/video_camera_icon"
        android:padding="1dp"
        android:tint="#888888"
        android:scaleType="fitCenter"

        />

    <ImageButton
        android:id="@+id/btn_swap_camera"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/round_button"
        android:layout_alignParentRight="true"
        android:layout_margin="30dp"
        android:src="@drawable/swap_camera_icon"
        android:padding="1dp"
        android:tint="#888888"
        android:scaleType="fitCenter"/>


    <ImageButton
        android:id="@+id/btn_effects"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"

        android:layout_margin="50dp"
        android:src="@drawable/effect_icon"
        android:padding="1dp"
        android:tint="#888888"

        android:scaleType="fitCenter"/>


    <com.ShaderProjects.shadercam.CustomScroller
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/my_recycler_view"
        android:scrollbars="vertical"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/filter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:scrollbars="vertical"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#AAAAAA"
        android:text="Filter Name" />

</RelativeLayout>
